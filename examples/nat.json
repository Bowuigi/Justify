{
  "description": "Peano arithmetic / natural number arithmetic",
  "syntax": {
    "number": {
      "description": "Natural number",
      "suggestions": ["n", "m", "k"],
      "grammar": [
        {
          "id": "zero",
          "description": "Number zero",
          "tex_parts": ["0"],
          "fixity": "none",
          "arguments": []
        },
        {
          "id": "succ",
          "description": "Successor function, equivalent to $n \\mapsto n+1$",
          "tex_parts": ["S"],
          "fixity": "prefix",
          "arguments": [
            {"from": "number", "id": "n", "tex": "n"}
          ]
        }
      ]
    }
  },
  "relations": {
    "equal": {
      "description": "Natural number $n$ is syntactically equal to $m$",
      "tex_parts": ["="],
      "fixity": "infix",
      "arguments": [
        {"from": "number", "id": "n", "tex": "n"},
        {"from": "number", "id": "m", "tex": "m"}
      ],
      "rules": [
        {
          "rule": {"tex": "Base", "id": "base"},
          "variables": {},
          "literals": {},
          "patterns": {
            "n": {"is": "con", "tag": "zero", "args": []},
            "m": {"is": "con", "tag": "zero", "args": []}
          },
          "premises": []
        },
        {
          "rule": {"tex": "Ind", "id": "ind"},
          "variables": {"x": "x", "y": "y"},
          "literals": {},
          "patterns": {
            "n": {"is": "con", "tag": "succ", "args": [{"is": "ref", "to": "x"}]},
            "m": {"is": "con", "tag": "succ", "args": [{"is": "ref", "to": "y"}]}
          },
          "premises": [
            {
              "relation": "equal",
              "args": [
                {"is": "ref", "to": "x"},
                {"is": "ref", "to": "y"}
              ]
            }
          ]
        }
      ]
    },
    "add": {
      "description": "Natural number $n$ plus $m$ is syntactically equal to $k$",
      "tex_parts": ["+","="],
      "fixity": "infix",
      "arguments": [
        {"from": "number", "tex": "n", "id": "n"},
        {"from": "number", "tex": "m", "id": "m"},
        {"from": "number", "tex": "k", "id": "k"}
      ],
      "rules": [
        {
          "rule": {"tex": "Base", "id": "base"},
          "variables": {"x": "x"},
          "literals": {},
          "patterns": {
            "n": {"is": "ref", "to": "x"},
            "m": {"is": "con", "tag": "zero", "args": []},
            "k": {"is": "ref", "to": "x"}
          },
          "premises": []
        },
        {
          "rule": {"tex": "Ind", "id": "ind"},
          "variables": {"x": "x", "y": "y", "z": "z"},
          "literals": {},
          "patterns": {
            "n": {"is": "ref", "to": "x"},
            "m": {"is": "con", "tag": "succ", "args": [{"is": "ref", "to": "y"}]},
            "k": {"is": "con", "tag": "succ", "args": [{"is": "ref", "to": "z"}]}
          },
          "premises": [
            {
              "relation": "add",
              "args": [
                {"is": "ref", "to": "x"},
                {"is": "ref", "to": "y"},
                {"is": "ref", "to": "z"}
              ]
            }
          ]
        }
      ]
    },
    "multiply": {
      "description": "Natural number $n$ times $m$ is syntactically equal to $k$",
      "tex_parts": ["\\times", "="],
      "fixity": "infix",
      "arguments": [
        {"from": "number", "tex": "n", "id": "n"},
        {"from": "number", "tex": "m", "id": "m"},
        {"from": "number", "tex": "k", "id": "k"}
      ],
      "rules": [
        {
          "rule": {"tex": "Base", "id": "base"},
          "variables": {"x": "x"},
          "literals": {},
          "patterns": {
            "n": {"is": "ref", "to": "x"},
            "m": {"is": "con", "tag": "zero", "args": []},
            "k": {"is": "con", "tag": "zero", "args": []}
          },
          "premises": []
        },
        {
          "rule": {"tex": "Ind", "id": "ind"},
          "variables": {"w": "w", "x": "x", "y": "y", "z": "z"},
          "literals": {},
          "patterns": {
            "n": {"is": "ref", "to": "x"},
            "m": {"is": "con", "tag": "succ", "args": [{"is": "ref", "to": "y"}]},
            "k": {"is": "ref", "to": "z"}
          },
          "premises": [
            {
              "relation": "multiply",
              "args": [
                {"is": "ref", "to": "x"},
                {"is": "ref", "to": "y"},
                {"is": "ref", "to": "w"}
              ]
            },
            {
              "relation": "add",
              "args": [
                {"is": "ref", "to": "w"},
                {"is": "ref", "to": "x"},
                {"is": "ref", "to": "z"}
              ]
            }
          ]
        }
      ]
    }
  }
}
